<section class="text-gray-300 bg-gray-900 body-font">
  <div class="container px-5 py-2 mx-auto">
    <div class="flex justify-between items-center w-full mx-auto">
      <h1 class="text-2xl sm:text-3xl font-medium title-font text-white">Projects</h1>

      <div class="flex-shrink ml-4">
        <div class="relative rounded-md shadow-sm">
          <input id="search"
                 type="search"
                 class="form-control form-control-lg w-full py-1 pl-2 pr-12 rounded bg-gray-700 focus:outline-none focus:text-gray-900 focus:bg-white placeholder-gray-300 focus:placeholder-gray-400"
                 placeholder="Search..."
                 value="<%= @query %>"
                 data-reflex="input->SearchReflex#query"
                 data-reflex-root="#search-results">

          <div class="absolute inset-y-0 right-0 mr-2 flex items-center">
            <%= render_svg "search", styles: "text-gray-300 focus:text-gray-800 h-4 w-4 fill-current" %>
         </div>
        </div>
      </div>
    </div>

    <div class="mt-2 w-full mx-auto">
      <div id="search-results">
        <p class="hidden sm:block lead mb-2"><%= @pagy.count %> results found</p>
        <% if @pagy.count > 0 %>
          <%= render "projects/table", projects: @projects, order_by: @order_by, sort: @direction %>
          <div class="sm:mt-6">
            <%= render(PaginateComponent.new(pagy: @pagy, root: "#search-results")) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
