<section class="text-gray-300 bg-gray-900 body-font">
  <div class="container px-5 py-2 mx-auto">
    <div class="flex pl-4 mt-4 w-full mx-auto">
      <h1 class="text-2xl sm:text-3xl font-medium title-font text-white">Projects</h1>
    </div>

    <div class="mt-2 w-full mx-auto">
      <table class="table-fixed w-full text-left whitespace-no-wrap mb-2">
        <thead>
          <tr>
            <th class="w-1/2 px-4 py-3 title-font tracking-wider font-medium text-white bg-gray-800 rounded-tl rounded-bl">
              <%= link_to "Name #{arrow :name, @order_by, sort: @direction}", "#",
                          data: { reflex: "click->TabularReflex#order",
                          column_name: :name,
                          direction: direction(@direction) } %>
            </th>
            <th class="w-1/4 px-4 py-3 title-font tracking-wider font-medium text-white bg-gray-800">
              <%= link_to "Key #{arrow :key, @order_by, sort: @direction}", "#",
                          data: { reflex: "click->TabularReflex#order",
                          column_name: :key,
                          direction: direction(@direction) } %>
            </th>
            <th class="w-1/4 px-4 py-3 title-font tracking-wider font-medium text-white bg-gray-800">
              <%= link_to "Lead #{arrow :lead, @order_by, sort: @direction}", "#",
                          data: { reflex: "click->TabularReflex#order",
                          column_name: :lead,
                          direction: direction(@direction) } %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td class="px-4 py-3"><%= project.name %></td>
              <td class="px-4 py-3"><%= project.key %></td>
              <td class="px-4 py-3"><%= project.username %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= render(PaginateComponent.new(pagy: @pagy, root: ".container")) %>
    </div>
  </div>
</section>
