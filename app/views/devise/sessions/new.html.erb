<% content_for :devise_form do %>

  <h1 class="text-4xl mt-2 text-gray-100">Sign in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mt-6">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="mt-6">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-6 flex items-center">
        <%= f.check_box :remember_me, class: "input-checkbox" %>
        <%= f.label :remember_me, class: "ml-1 label" %>
      </div>
    <% end %>

    <div class="mt-8">
      <%= f.submit "Sign in", class: "btn btn-primary min-w-1/2" %>
    </div>

  <hr class="mt-8 mb-4 border border-gray-700" />

  <% end %>

  <%= render "devise/shared/links" %>
<% end %>

<%= render "devise/shared/form_wrap" %>
