<header  x-data="{isOpen: false }" class="sm:flex sm:justify-between sm:items-center bg-gray-900 sticky top-0 z-10">
  <div class="flex items-center justify-between px-4 py-2">
    <div>
      <%= render "layouts/brand", path: account_root_path %>
    </div>
    <div class="sm:hidden">
      <button @click="isOpen = !isOpen"
              type="button" class="block p-2 text-gray-500 hover:text-white focus:text-white focus:outline-none">
        <svg
          class="h-8 fill-current"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <!-- X  -->
          <path
            x-show="isOpen"
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
          />
          <!-- hamburger menu  -->
          <path
            x-show="!isOpen"
            fill-rule="evenodd"
            d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
          />
        </svg>
      </button>
    </div>
  </div>

  <div :class="{'block': isOpen, 'hidden': !isOpen }" class="px-2 py-2 pb-4 sm:flex sm:p-0">
    <a href="<%= edit_account_registration_path %>"
       class="block px-2 py-1 border-2 text-white font-semibold rounded focus:outline-none focus:border-white border-transparent hover:bg-gray-800 sm:mt-0 sm:ml-2">
      <%= render_svg "gear", styles: "h-4 mr-1 inline-block" %>
      Account
    </a>
    <a href="<%= destroy_account_session_path %>"
       data-method="delete"
       class="mt-1 block px-2 py-1 border-2 text-white font-semibold rounded focus:outline-none focus:border-white border-transparent hover:bg-gray-800 sm:mt-0 sm:ml-2">
       <%= render_svg "box_arrow_right", styles: "h-4 mr-1 inline-block" %>
       Sign out
    </a>
  </div>
</header>
